            <input type="hidden" name= 'memeID' value="<%=memeID%>">
        </div>
            <h4>Select Tag/s:</h4>
             <div>
                <textarea rows="2" cols="45" name = 'memeTag' placeholder = '<%=memeTag%>'></textarea>
            </div>
            
    <h4>Select Privacy:</h4>
    <span><input type="radio" name = "memePrivacy" value="Public"><label>Public</label></span>
