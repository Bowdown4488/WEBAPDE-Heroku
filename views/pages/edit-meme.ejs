    <h1> EDIT MEMES </h1>
    <img src="/memes/<%=memeimage%>" class="img meme" alt="upload avatar" style="border: solid black;"> 
    <form action="edit-meme" method= "post" name = 'upload' enctype="multipart/form-data">
        <div>
            <input type="file" name = 'memeimage' id="avatar-button">
        </div>
        <div>
            <h4>Meme Title:</h4>
            <input type="text" name = 'memeTitle' placeholder="<%=memeTitle%>">
