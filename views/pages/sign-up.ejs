<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sign Up</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
  <script>
   function PreviewImage() {
        let Reader = new FileReader();
        Reader.readAsDataURL(document.getElementById("uploadImage").files[0]);
  
        Reader.onload = function (readerEvent) {
        document.getElementById("uploadPreview").src = readerEvent.target.result;
    };
    };    
  </script>
    
  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }
    
    /* Add a gray background color and some padding to the footer */
    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }

    .jumbotron {
      color: white;
      background-color: rebeccapurple;
    }

    body {
      background-color: #404040;
      color: white;
      padding-top: 70px;
      }
      
      #dropbox {
            border: 2px solid;
            height: 120px;
            width: 120px;
          }
      #uploadPreview{
            align-content: center;
            width: 120px; 
            height: 120px;
       }
  </style>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar">potato</span>
        <span class="icon-bar">tomato</span>
        <span class="icon-bar">asdf</span>                        
      </button>
      <div>
        <a class="navbar-brand" href="/main-page"><img src="./HMMMmmmmMMMMmmmm.png" class="img-responsive" width="35px" height="35px"></a>
      </div>
      
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="#">About</a></li>
      </ul>
      <form class="navbar-form navbar-left" >
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>
  </div>
</nav>

<div class="row">
<form action="main-page" method= "post" name = 'sign-up' enctype="multipart/form-data">
  <div class="container">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
<!--    <img src="./rin.jpg" class="img" alt="upload avatar" style="border: solid black;">-->
        <div id="imageBorder">
          <div id="imageContainer">
            <div id="dropbox">
                <img id="uploadPreview" />
            </div>
          </div>
       </div>  
    </div>
    <div class="col-sm-2 text-center">
    <label class="lead">Upload avatar</label>
    <input name = 'image' type="file" onchange="PreviewImage();" id="uploadImage" accept="image/*"/>
    </div>
  </div>
<div class="row">
<div class="container">
  <div class="col-sm-6">
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
              <input type="text" name = 'username' class="form-control" id="usrname" placeholder="Enter username">
            </div>
            <div class="form-group">
              <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
              <input type="password" name = 'password' class="form-control" id="psw" placeholder="Enter password"><br>
<!--
              <label for="conpsw"><span class="glyphicon glyphicon-eye-open"></span> Confirm Password</label>
              <input type="password" class="form-control" id="conpsw" placeholder="Confirm password">
-->
            </div>
  </div>
  <div class="col-sm-6">
            <div class="form-group">
              <label for="email"><span class="glyphicon glyphicon-info-sign"></span> Email Address</label>
              <input type="text" name = 'email' class="form-control" id="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="shortdesc"><span class="glyphicon glyphicon-question-sign"></span> Short Description</label>
              <input type="text" name = 'userBio' class="form-control" id="shortdesc" placeholder="Tell us something about yourself..."><br>
            </div>
  </div>
</div>
<div class="container">
  <div class="col-sm-5"></div>
  <div class="col-sm-2">
    <input type="submit" class="btn btn-success btn-block" style="margin-top: 30px; background-color: red; border-color: red;">
  </div>
</div>
</div>
</form>
</div>
</body>
</html>
