<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar">potato</span>
        <span class="icon-bar">tomato</span>
        <span class="icon-bar">asdf</span>                        
      </button>
      <div>
        <a class="navbar-brand" href="/main-postLogin"><img src="./HMMMmmmmMMMMmmmm.png" class="img-responsive" width="35px" height="35px"></a>
      </div>
      
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search Tags..">
         <button type="submit" class="btn btn-default">Search</button>
        </div>
        <a type="button" class=" btn btn-warning upload" href="/upload-meme">Upload Meme</a>
        </form>
    </div>
  </div>
</nav>

<div class="container-fluid bg-3 text-center">    
  <h3>Recent memes</h3><br>
  	<% var j = 0; %>
  	<% while(data.list[j] != null){ %>
      	<div class="row" style="margin: auto; height: 480px;">
      <% for(var i = j;i < j+3 && data.list[i] != null;i++){ %>
      	  <div class="col-sm-4 text-left" style="height: 390px;">
      		<div class="panel panel-default" style="height: 100%;">
	      	 <div class="panel-heading"><span class="title"><%= data.list[i].memeTitle %></span>
	      	 	<span class="header-stuff">
	      	 		<span class="tags-label">Tags: <%= data.list[i].memeTag %></span>
	      	 		<a href="/edit-meme/<%= data.list[i].memeTitle%>" class="glyphicon glyphicon-edit"></a>
	      	 	</span>
	      	 </div>
	      	  <div class="panel panel-body">
	      <% console.log("i: "+i) %>
      
	      
		      <div class = "memecontainer">
		      <img src="/memes/<%= data.list[i].memeimage %>" class="meme" alt = "Image">
		  	  </div>
      		  </div>
      		 </div>
	      </div>    
	      
      <% } %>
      	</div>
      <% j = j + 3; %>
      <% console.log("j: "+j) %>
      <% } %>
</div>

