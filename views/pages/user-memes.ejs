  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }
    
    /* Add a gray background color and some padding to the footer */
    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }

    .jumbotron {
      color: white;
      background-color: rebeccapurple;
    }

    body {
      background-color: #1a1a1a;
      color: white;
      padding-top: 70px;
      background-image: url("./background.jpg");
    }

    .memecontainer {
      margin: auto;
      max-height: 100%;
      min-height: 350px;
      max-width: 90%;
      align-content: center;
      justify-content: center;
      
    }

    .meme {
    	margin: auto;
    	margin-left: 25%;
    	max-height: 350px;
      	min-height: 100%;
      	max-width: 400px;
      	min-width: 50%;
    }

    .panel-body {
    	height: 100%;
    	align-content: center;
    	justify-content: center;

    }

    .panel-heading {
    	height: 50px;

    }

    .title {
    	font-size: 20px;
    	font-weight: bold;
    }

    .header-stuff {
    	float: right;
    }

    .tags-label {
    	margin-right: 10px;
    	
    }
